<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Intro">


    <Button
        android:id="@+id/explore"
        android:layout_width="306dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:background="@color/colorPrimary"
        android:text="Explore my apps"
        android:textColor="#FFFFFF"
        android:textSize="25dp"
        android:fontFamily="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="244dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:text="Anshul Khattar"
        android:textColor="@color/colorAccent"
        android:textSize="30dp"
        android:textStyle="bold"
        android:typeface="normal"
        app:fontFamily="casual" />

    <ImageView
        android:id="@+id/fb"
        android:layout_width="81dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="144dp"
        app:srcCompat="@drawable/fb" />

    <ImageView
        android:id="@+id/git"
        android:layout_width="74dp"
        android:layout_height="45dp"
        android:layout_alignTop="@+id/fb"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="163dp"
        android:layout_marginLeft="163dp"
        app:srcCompat="@drawable/git" />

    <ImageView
        android:id="@+id/linkedin"
        android:layout_width="52dp"
        android:layout_height="47dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignBottom="@+id/fb"
        android:layout_marginEnd="-23dp"
        android:layout_marginBottom="1dp"
        app:srcCompat="@drawable/linkedin"
        android:layout_alignRight="@+id/textView"
        android:layout_marginRight="-23dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="323dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:text="Looking for work experience and exposure in world of Computer Science. Available for free lancing and part time work."
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:fontFamily="cursive" />
</android.widget.RelativeLayout>